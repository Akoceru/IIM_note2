{% extends '::base.html.twig' %}
{% block title %}
    {{ parent() }} - Admin list
{% endblock %}
{% block content %}
<h1 class="text-center">Admin Panel</h1>

<div class="row">
  <div class="col-md-12 bloc-tab">
  <h3>Liste Student</h3>
    <table class="table table-striped ">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Button <a class="glyphicon glyphicon-plus icon-plus" href="{{path ('student_add') }}"></a></th>
        </tr>
      </thead>
        <tbody>
      {% for student in students %}
            <tr>
              <td>{{ student.firstName }}</td>
              <td>{{ student.lastName }}</td>
              <td>{{ student.email }}</td>
              <td>
                <div class="row">
                  <div class="col-md-6">
                    <a class="glyphicon center-block  glyphicon-trash student_delete" href="{{path ('student_delete', {id: student.id}) }}"></a>
                  </div>
                  <div class="col-md-6">
                    <a class="glyphicon glyphicon-pencil" href="{{path ('student_update', {id: student.id}) }}" ></a>
                  </div>
                </div>
              </td>
            </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>

<div class="row bloc-2-tab">
  <div class="col-md-6">
  <h3>Liste Exam</h3>
    <table class="table table-striped ">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Date</th>
          <th>Button <a class="glyphicon glyphicon-plus icon-plus" href="{{path ('exam_add') }}"></a></th>
        </tr>
      </thead>
        <tbody>
      {% for exam in exams %}
            <tr>
              <td>{{ exam.name }}</td>
              <td>{{ exam.description }}</td>
              <td>{{ exam.date|date('Y-m-d') }}</td>
              <td>
                <div class="row">
                  <div class="col-md-6">
                    <a class="glyphicon center-block  glyphicon-trash delete_exam" href="{{path ('exam_delete', {id: exam.id}) }}"></a>
                  </div>
                  <div class="col-md-6">
                    <a class="glyphicon glyphicon-pencil" href="{{path ('exam_update', {id: exam.id}) }}"></a>
                  </div>
                </div>
              </td>
            </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
  <h3>Liste Grade</h3>
    <table class="table table-striped tab-grade">
      <thead>
        <tr>
          <th>Élève</th>
          <th>Examen</th>
          <th>Note</th>
          <th>Button<a class="glyphicon glyphicon-plus icon-plus" href="{{path ('grade_add') }}"></a></th>
        </tr>
      </thead>
        <tbody>
      {% for grade in grades %}
            <tr>
              <td>{{ grade.student }}</td>
              <td>{{ grade.exam }}</td>
              <td>{{ grade.mark }}</td>
              <td>
                <div class="row">
                  <div class="col-md-6">
                    <a class="glyphicon center-block  glyphicon-trash" href="{{path ('grade_delete', {id: grade.id}) }}"></a>
                  </div>
                  <div class="col-md-6">
                    <a class="glyphicon glyphicon-pencil delete_exam" href="{{path ('grade_update', {id: grade.id}) }}"></a>
                  </div>
                </div>
              </td>
            </tr>
      {% endfor %}
        </tbody>
    </table>
  </div>
</div>

{% endblock %}
