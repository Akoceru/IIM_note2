{% extends '::base.html.twig' %}
{% block title %}
    {{ parent() }} - Exam List
{% endblock %}
{% block content %}
<h1>Exams list</h1>

<ul>
    {% for exam in exams %}
        <li>{{ exam.name }} - {{ exam.description }} - {{ exam.date|date('Y-m-d') }}<a class="btn btn-danger" href="{{ path('exam_delete', {id: exam.id })}}"> delete </a></li>
    {% endfor %}
</ul>
{% endblock %}